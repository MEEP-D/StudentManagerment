<Window x:Class="StudentManagement.Views.ActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activate License" Height="200" Width="350">
    <Grid Margin="20">
        <TextBlock Text="Enter 16‑char License Key:" VerticalAlignment="Top" />
        <TextBox x:Name="LicenseKeyTextBox" Margin="0,30,0,0" MaxLength="16"/>
        <Button Content="Activate" 
                Margin="0,70,0,0"
                Click="Activate_Click"/>
    </Grid>
</Window>
